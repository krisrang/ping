$liquorice: #31394A;

a {
  cursor: pointer;
}

// 
// SIDEBAR
// 

#sidebar {
  position: absolute;
  top: 0;
  left: 0;
  bottom: 40px;
  width: 200px;
  background-color: $liquorice;
  color: #fff;
}

#logo {
  margin: 10px 0;
  text-align: center;
}

#rooms {
  ul {
    list-style: none;
    margin: 0;
    padding: 0;

    li {
      background: $liquorice url(<%= asset_path 'roomtab_bg.png' %>) repeat-x;
      margin-bottom: -3px;

      &.active {
        background: $liquorice url(<%= asset_path 'roomtab_selected_bg.png' %>) repeat-x;

        a {
          color: #fff;
        }
      }

      a {
        position: relative;
        display: block;
        color: #A7B3B6;
        text-shadow: 0 -1px #000;
        padding: 8px 10px;

        &:hover {
          color: #fff;
          text-decoration: none;
        }

        i { margin-right: 5px; }
      }
    }
  }
}

#userbar {
  position: absolute;
  bottom: 0;
  left: 0;
  height: 40px;
  width: 200px;
  background-color: $liquorice;
}

// 
// MAIN
// 

#main {
  position: absolute;
  top: 0;
  left: 200px;
  right: 200px;
  bottom: 0;
  // background-color: $liquorice;
}

// 
// USERS
// 

#users {
  position: absolute;
  top: 0;
  right: 0;
  bottom: 0;
  width: 200px;
  border-left: 1px solid #c1c1c1;
  background-color: #eee;
  // background-color: $liquorice;
}