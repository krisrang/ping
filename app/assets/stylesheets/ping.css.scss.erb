@import 'variables';
@import 'bourbon';

h2 {
  font-size: 24px;
  line-height: 1.1em;
  margin: 0;
}

h3 {
  font-size: 20px;
  line-height: 1em;
  margin: 5px 0;
}

a {
  cursor: pointer;
}

.header {
  font-size: 12px;
  text-transform: uppercase;
  margin-bottom: 5px;
}

.actionbtn {
  float: right;
}

::-webkit-scrollbar-thumb {
    border-radius: 50px;
    border: 5px solid #fff;
}

::-webkit-scrollbar-thumb:vertical {
    background-color: #8c8d8e;
    height: 100px;
}

::-webkit-scrollbar-thumb:horizontal {
    background-color: #8c8d8e;
    height: 16px !important;
}

.scroller:hover::-webkit-scrollbar-thumb,
::-webkit-scrollbar-thumb:hover {
    background-color: #1F282D;
}

::-webkit-scrollbar {
    height: 16px;
    width: 16px;
    background-color: #fff;
}

::-webkit-scrollbar-corner {
    background-color: #fff;
}

// 
// SIDEBAR
// 

#sidebar {
  position: absolute;
  top: 0;
  left: 0;
  bottom: 0;
  width: 240px;
  padding: 10px;
  color: #fff;
  background-color: $lightLiquorice;
  @include transition(background-color .3s ease-in-out 0,left .5s ease-in-out .3s);

  &:hover { background-color: $liquorice; }


  .roomlist {
    a {
      display: block;
      color: $dulltext;
      padding: 5px;
      font-size: 13px;

      i { margin-right: 5px; }
    }

    li:hover a, a:hover, a.active {
      color: #fff;
      text-decoration: none;
      background: $sidebarHover;
      border-radius: $radius;
    }

    a.lobby-link {
      margin: 0 -15px 10px 0;
    }

    ul {
      list-style: none;
      margin: 0;
      padding: 0;
    }

    li { margin-right: -15px; }

    a.leave {
      margin-right: 15px;
      float: right;
      display: none;
      background: none;

      &:hover { background: none; }
    }

    li:hover a.leave { 
      color: $dulltext;
      display: inline;
      background: none;
    }

    li:hover a.leave:hover { color: #fff; }
  }


  .userbar {
    color: #fff;
    height: 42px;
    overflow: hidden;
    margin-bottom: 10px;
    border-radius: $radius;
    cursor: pointer;
    @include transition(all 400ms ease-in-out);

    &.open {
      height: 110px;
    }

    &.open, &:hover {
      background: $sidebarHover;
    }

    .userbar-details {
      height: 42px;
      padding: 4px;

      .avatar {
        padding: 1px;
        width: 34px;
        height: 34px;
        float: left;
        border-radius: $radius;
      }

      span {
        line-height: 34px;
        padding: 0 10px;
      }
    }

    .userbar-select {
      ul {
        list-style: none;
        margin: 0;
        padding: 5px;

        li {
          a {
            display: block;
            color: #fff;
            padding: 4px 6px;
            border-radius: $radius;

            &:hover { background-color: $sidebarHover; text-decoration: none; }

            i { padding: 0 0 0 2px; }
          }
        }
      }
    }
  }

  .connectbit {
    position: absolute;
    bottom: 5px;

    .message { 
      display: none;
      font-size: 13px;
      color: #DDD;
    }

    &:hover .message, &.offline .message { display: inline; }
  }
}

// 
// MAIN
// 

#main {
  position: absolute;
  top: 0;
  left: 240px;
  right: 0;
  bottom: 0;
  // background-color: $liquorice;

  .content {
    padding: 15px;

    h2 {
      font-weight: 300;

      span {
        font-size: 16px;
        font-weight: 400;
      }
    }
  }
}

// 
// LOBBY ROOMS
// 

.lobby .rooms {
  position: absolute;
  top: 60px;
  left: 0;
  bottom: 0;
  right: 0;
  overflow: auto;
  margin: 10px;

  table {
    margin: 10px 0;

    .name { width: 20%; }
    .topic { width: 50%; }
    .owner { width: 20%; }
    .actions { width: 10%; }

    tbody td {
      cursor: pointer;
      vertical-align: middle;
    }
  }
}

// 
// ROOM
// 

.room {
  .room-header {
    position: absolute;
    height: 75px;
    background: rgba(255, 255, 255, 0.95);
    left: 0;
    right: 240px;
    padding: 10px;
    z-index: 500;
    border-bottom: 1px solid rgba(0, 0, 0, 0.05);

    .cog {
      float: right;
      color: #999;
      font-size: 22px;
      margin: 10px;

      &:hover { color: #444; }
    }

    .room-settings {
      right: 20px;
      top: 50px;
      left: auto;
    }

    h2 {
      font-weight: 300;
    }

    span {
      font-size: 16px;
      font-weight: 400;
    }
  }

  .room-messages {
    position: absolute;
    top: 0;
    bottom: 100px;
    left: 0;
    right: 240px;
    z-index: 200;

    .messagelist {
      list-style: none;
      margin: 0;
      padding: 10px;
      overflow: auto;
      height: 100%;

      .message {
        margin-bottom: 10px;

        .avatar {
          padding: 1px;
          width: 34px;
          height: 34px;
          float: left;
          border-radius: $radius;
          margin-top: 2px;
        }

        .details {
          color: #999;
          font-size: 12px;
          padding: 0 0 0 45px;
        }

        .body {
          padding: 0 5px 5px 45px;
        }
      }
    }
  }

  .room-composer {
    border-top: 1px solid rgba(0, 0, 0, .05);
    bottom: 0;
    height: 100px;
    left: 0;
    padding: 10px;
    position: absolute;
    right: 240px;
    z-index: 500;

    .avatar {
      position: absolute;
    }

    .messagebox {
      position: absolute;
      left: 50px;
      right: 100px;

      textarea {
        height: 80px;
        padding: 5px 10px;
        resize: none;
      }
    }
    
    .btn-send {
      position: absolute;
      right: 15px;
      width: 66px;
    }

    .btn-file {
      position: absolute;
      right: 15px;
      top: 55px;
      width: 66px;
    }
  }
}

// 
// USERS
// 

.room-users {
  background-color: #f4f5f6;
  bottom: 0;
  padding: 10px;
  position: absolute;
  right: 0;
  top: 0;
  width: 240px;
}