@import 'variables';

h2 {
  font-size: 24px;
  line-height: 1.1em;
  margin: 0;
}

h3 {
  font-size: 20px;
  line-height: 1em;
  margin: 0;
}

a {
  cursor: pointer;
}

// 
// SIDEBAR
// 

#sidebar {
  position: absolute;
  top: 0;
  left: 0;
  bottom: 0;
  width: 200px;
  padding-bottom: 60px;
  background-color: $liquorice;
  color: #fff;
}

#logo {
  margin: 10px 0;
  text-align: center;
}

#rooms {
  ul {
    list-style: none;
    margin: 0;
    padding: 0;

    li {
      background: $liquorice url(<%= asset_path 'roomtab_bg.png' %>) repeat-x;
      margin-bottom: -3px;

      &.active {
        background: $liquorice url(<%= asset_path 'roomtab_selected_bg.png' %>) repeat-x;

        a {
          color: #fff;
        }
      }

      a {
        position: relative;
        display: block;
        color: $dulltext;
        text-shadow: 0 -1px #000;
        padding: 8px 10px;

        &:hover {
          color: #fff;
          text-decoration: none;
        }

        i { margin-right: 5px; }
      }
    }
  }
}

#userbar {
  position: absolute;
  bottom: 0;
  left: 0;
  height: 34px;
  width: 200px;
  background: $liquorice url(<%= asset_path 'roomtab_bg.png' %>) repeat-x;
  color: $dulltext;

  .avatar {
    padding: 1px;
    width: 34px;
    height: 34px;
    float: left;
    margin-top: -2px;
    margin-left: 3px;
  }
  
  .userbar-toggle { 
    float: left;
    width: 130px;
    padding: 7px 5px;
    color: $dulltext;

    &:hover { color: #fff; text-decoration: none; }
    img { margin-top: -3px; }
  }

  .btn-settings { 
    padding: 2px 5px;
    font-size: 20px;
    margin: 0;
    background: none;
    border: none;

    &:hover { color: #fff; }
  }
}

#userbar-select {
  position: absolute;
  bottom: 34px;
  left: 0;
  width: 200px;
  border: 1px solid #B7BABC;
  background: #fff;

  ul {
    list-style: none;
    margin: 0;
    padding: 0;

    li {
      a {
        display: block;
        color: #222;
        padding: 4px;
        font-size: 13px;

        &:hover { background-color: #F0F0F0; text-decoration: none; }

        i { padding: 0 0 0 2px; }
      }
    }
  }
}

// 
// MAIN
// 

#main {
  position: absolute;
  top: 0;
  left: 200px;
  right: 200px;
  bottom: 0;
  // background-color: $liquorice;
}

// 
// USERS
// 

#users {
  position: absolute;
  top: 0;
  right: 0;
  bottom: 0;
  width: 200px;
  border-left: 1px solid #c1c1c1;
  background-color: #eee;
  // background-color: $liquorice;
}