@import 'variables';
@import 'bourbon';

h2 {
  font-size: 24px;
  line-height: 1.1em;
  margin: 0;
}

h3 {
  font-size: 20px;
  line-height: 1em;
  margin: 5px 0;
}

a {
  cursor: pointer;
}

.header {
  font-size: 12px;
  text-transform: uppercase;
  margin-bottom: 5px;
}

.actionbtn {
  float: right;
}

// 
// SIDEBAR
// 

#sidebar {
  position: absolute;
  top: 0;
  left: 0;
  bottom: 0;
  width: 240px;
  padding: 10px;
  color: #fff;
  background-color: $lightLiquorice;
  @include transition(background-color .3s ease-in-out 0,left .5s ease-in-out .3s);

  &:hover { background-color: $liquorice; }
}

#logo {
  margin: 10px 0;
  text-align: center;
}

#rooms {
  a {
    display: block;
    color: $dulltext;
    padding: 5px;
    font-size: 13px;
    border-radius: $radius;

    &:hover {
      color: #fff;
      text-decoration: none;
    }

    i { margin-right: 5px; }
  }

  a.active, li.active a { color: #fff; }

  ul {
    list-style: none;
    margin: 0;
    padding: 0;
  }

  li {
    margin-right: -15px;

    &:hover {
      background: $sidebarHover;
      border-radius: $radius;
    }
  }

  li:hover a.room { color: #fff; }

  a.lobby-link {
    margin: 0 -15px 10px 0;

    &:hover { background: $sidebarHover; }
  }

  a.leave {
    margin-right: 15px;
    float: right;
    display: none;
  }

  li:hover a.leave {
    display: inline;
  }
}

#userbar {
  color: #fff;
  height: 42px;
  overflow: hidden;
  margin-bottom: 10px;
  border-radius: $radius;
  cursor: pointer;
  @include transition(all 400ms ease-in-out);

  &.open {
    height: 110px;
  }

  &.open, &:hover {
    background: $sidebarHover;
  }

  #userbar-details {
    height: 42px;
    padding: 4px;

    .avatar {
      padding: 1px;
      width: 34px;
      height: 34px;
      float: left;
      border-radius: $radius;
    }

    span {
      line-height: 34px;
      padding: 0 10px;
    }
  }

  #userbar-select {
    ul {
      list-style: none;
      margin: 0;
      padding: 5px;

      li {
        a {
          display: block;
          color: #fff;
          padding: 4px 6px;
          border-radius: $radius;

          &:hover { background-color: $sidebarHover; text-decoration: none; }

          i { padding: 0 0 0 2px; }
        }
      }
    }
  }
}

// 
// MAIN
// 

#main {
  position: absolute;
  top: 0;
  left: 240px;
  right: 0;
  bottom: 0;
  // background-color: $liquorice;

  .content {
    padding: 15px;

    h2 {
      font-weight: 300;

      span {
        font-size: 16px;
        font-weight: 400;
      }
    }
  }
}

// 
// ROOMLIST
// 

#roomlist {
  table {
    margin: 10px 0;

    tbody td {
      cursor: pointer;

      &:hover {
        // text-decoration: underline;
      }
    }
  }
}

// 
// USERS
// 

#users {
  position: absolute;
  top: 0;
  right: 0;
  bottom: 0;
  width: 240px;
  padding: 10px;
  background-color: #F4F5F6;
}