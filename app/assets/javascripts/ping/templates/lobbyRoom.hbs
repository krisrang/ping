<tr {{bind-attr class="className"}}>
  <td {{action "joinRoom" this}}>{{name}}</td>
  <td {{action "joinRoom" this}}>{{topic}}</td>
  <td>{{user.username}}</td>
  <td>
    <button class="btn btn-sm btn-default" {{action "editRoom" this}} title="{{i18n rename}}">
      <i class="fa fa-pencil-square-o"></i>  
