<div class="appbar">
  {{#if currentUser.isAdmin}}
    <div class="appbar-details admin" data-toggle="dropdown">
      <i class="fa fa-chevron-down down"></i>
      <h1>{{unbound title}}</h1>    
    </div>
    
    <ul class="appbar-settings dropdown-menu" role="menu" aria-labelledby="dLabel">
      <li>Admin stuff</li>
    </ul>
  {{else}}
    <div class="appbar-details">
      <h1>{{unbound title}}</h1>    
    </div>
  {{/if}}
</div>