<div class="appbar">
  {{#if currentUser.isLoggedIn}}
    <div class="appbar-details" data-toggle="dropdown">
      <i class="fa fa-chevron-down down"></i>
      <h1>{{unbound title}}</h1>    
    </div>
    
    <ul class="appbar-settings dropdown-menu" role="menu" aria-labelledby="dLabel">
      <li>{{#link-to "preferences"}}<i class="fa fa-cog"></i> {{i18n userbar.preferences}}{{/link-to}}</li>
      <li><a {{action "logout"}}><i class="fa fa-sign-out"></i> {{i18n userbar.logout}}</a></li>
    </ul>
  {{else}}
    <div class="appbar-details">
      <h1>{{unbound title}}</h1>    
    </div>
  {{/if}}
</div>