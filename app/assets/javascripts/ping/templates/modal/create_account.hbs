{{#unless complete}}
  <div class="modal-body">
    <form class="form-horizontal" role="form">
      <div class="form-group">
        <div class="col-sm-12">
          {{textField value=accountName placeholderKey="user.name.title" id="new-account-name" autofocus="autofocus" class="form-control"}}
          {{inputTip validation=nameValidation helpKey="user.name.instructions"}}
        </div>
      </div>

      <div class="form-group">
        <div class="col-sm-12">
          {{textField value=accountEmail placeholderKey="user.email.title" id="new-account-email" disabled=emailValidated class="form-control"}}
          {{inputTip validation=emailValidation helpKey="user.email.instructions"}}
        </div>
      </div>

      <div class="form-group">
        <div class="col-sm-12">
          {{textField value=accountUsername placeholderKey="user.username.title" id="new-account-username" maxlength="15" class="form-control"}}
          {{inputTip validation=usernameValidation helpKey="user.username.instructions"}}
        </div>
      </div>
      
      {{#if passwordRequired}}
      <div class="form-group">
        <div class="col-sm-12">
          {{textField type="password" value=accountPassword placeholderKey="user.password.title" id="new-account-password" class="form-control"}}
          
          <div class="password_strength_container">
            <div class="password_strength_bg"></div>
            <div class="password_strength" {{bind-attr class="passwordStrength.className"}}></div>
            <div class="password_strength_separator" style="left: 20%;"></div>
            <div class="password_strength_separator" style="left: 40%;"></div>
            <div class="password_strength_separator" style="left: 60%;"></div>
            <div class="password_strength_separator" style="left: 80%;"></div>
            <div class="password_strength_desc" {{bind-attr class="passwordStrength.className"}}>
              <i class="fa fa-info-circle" {{bind-attr data-content="passwordStrength.message"}}></i>
            </div>
          </div>

          {{inputTip validation=passwordValidation}}
          {{#unless passwordValidation.reason}}
            <div class="help-block"><label>{{passwordInstructions}}</label></div>
          {{/unless}}
        </div>
      </div>
      {{/if}}

      <div class="password_confirmation">
        <label for='new-account-password-confirmation'>{{i18n user.password_confirmation.title}}</label>
        {{input type="password" value=accountPasswordConfirm id="new-account-confirmation" class="form-control"}}
        {{input value=accountChallenge id="new-account-challenge"}}
      </div>
    </form>

    <div class="modal-buttons">
      <button class='btn btn-info' {{bind-attr disabled="submitDisabled"}} {{action "createAccount"}}>{{i18n create_account.title}}</button>
      {{#if formSubmitted}}
        &nbsp; <i class='fa fa-spinner fa-spin'></i>
      {{else}}
        <button class='btn btn-default' {{action "showLogin"}}>{{i18n cancel}}</button>
      {{/if}}
    </div>
  </div>
{{/unless}}
