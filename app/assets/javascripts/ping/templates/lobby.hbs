<div class="content">
  <button {{action "newRoom"}} class="actionbtn btn btn-info">{{i18n lobby.newroom}}</button>
  <h2>{{i18n lobby.title}} <span>{{i18n lobby.available}}</span></h2>
  
  <div id="roomlist" class="scroller">
    <table class="table table-striped table-hover">
      <thead>
      <tr>
        <th class="name">{{i18n lobby.name}}</th>
        <th class="topic">{{i18n lobby.topic}}</th>
        <th class="owner">{{i18n lobby.owner}}</th>
        <th class="actions"></th>
      </tr>
      </thead>
      
      <tbody>
      
      {{#each arrangedContent}}
        {{#unless isNew}}
          <tr {{bind-attr class="className"}}>
            <td {{action "joinRoom" this}}>{{name}}</td>
            <td {{action "joinRoom" this}}>{{topic}}</td>
            <td>{{user.username}}</td>
            <td>
              <button class="btn btn-sm btn-default" {{action "renameRoom" this}} title="{{i18n rename}}">
                <i class="fa fa-pencil-square-o"></i>  
              </button>
              <button class="btn btn-sm btn-warning" {{action "deleteRoom" this}} title="{{i18n delete}}">
                <i class="fa fa-trash-o"></i>
              </button>
            </td>
          </tr>
        {{/unless}}
      {{/each}}
      </tbody>
    </table>
  </div>
</div>