<div class="content lobby">
  <button {{action "newRoom"}} class="actionbtn btn btn-info">{{i18n lobby.newroom}}</button>
  <h2>{{i18n lobby.title}} <span>{{i18n lobby.available}}</span></h2>
  
  <div class="rooms scroller">
    <table class="table table-striped table-hover">
      <thead>
      <tr>
        <th class="name">{{i18n lobby.name}}</th>
        <th class="topic">{{i18n lobby.topic}}</th>
        <th class="owner">{{i18n lobby.owner}}</th>
        <th class="actions"></th>
      </tr>
      </thead>
      
      <tbody>
      
      {{#each arrangedContent}}
        {{#unless isNew}}
          {{render "lobbyRoom" this}}
        {{/unless}}
      {{/each}}
      </tbody>
    </table>
  </div>
</div>