<div class="content">
  <button {{action "newRoom"}} class="actionbtn btn btn-info">{{i18n lobby.newroom}}</button>
  <h2>{{i18n lobby.title}} <span>{{i18n lobby.available}}</span></h2>
  
  <div id="roomlist" class="scroller">
    <table class="table table-striped table-hover">
      <thead>
      <tr>
        <th>{{i18n lobby.name}}</th>
      </tr>
      </thead>
      
      <tbody>
      {{#each}}
        {{#unless isNew}}
          <tr {{bind-attr class="className"}}><td {{action "joinRoom" this}}>{{name}}</td></tr>
        {{/unless}}
      {{/each}}
      </tbody>
    </table>
  </div>
</div>